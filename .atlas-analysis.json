  "keyFeatures": [
    "Multi-sport court availability search (Badminton, Squash, Pickleball)",
    "Geolocation-based venue discovery with distance filtering",
    "Automated web crawling with Playwright for real-time data",
    "RESTful API with FastAPI and OpenAPI documentation",
    "PostgreSQL database with SQLModel ORM",
    "Scheduled data refresh pipeline via GitHub Actions",
    "Price comparison and booking link aggregation"
  ],
  "publicApiSurface": [
    "POST /search/{sport} - Search for available courts by sport and filters",
    "POST /search/{sport}/{composite_key} - Get specific venue availability",
    "GET /venues/ - List all sports venues",
    "GET /venues/sports/{sport} - Get venues offering specific sport",
    "GET /venues/near - Find venues near postcode within radius",
    "GET /venues/{composite_key} - Get venue information",
    "GET /geolocation/postcode/{postcode} - Get postcode geolocation data",
    "GET /notifications/ - List active notifications",
    "POST /notifications/acknowledge - Acknowledge notification",
    "GET /health/status - API health check"
  ]
